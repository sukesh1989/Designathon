<%- model_class = Airplanebooking -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:from) %>:</strong></dt>
  <dd><%= @airplanebooking.from %></dd>
  <dt><strong><%= model_class.human_attribute_name(:to) %>:</strong></dt>
  <dd><%= @airplanebooking.to %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_of_journey) %>:</strong></dt>
  <dd><%= @airplanebooking.date_of_journey %></dd>
  <dt><strong><%= model_class.human_attribute_name(:return_date) %>:</strong></dt>
  <dd><%= @airplanebooking.return_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:noOfPassengers) %>:</strong></dt>
  <dd><%= @airplanebooking.noOfPassengers %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              airplanebookings_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_airplanebooking_path(@airplanebooking), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              airplanebooking_path(@airplanebooking),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
